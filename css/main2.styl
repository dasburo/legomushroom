rect()
  width  arguments
  height arguments
  
circle()
  rect arguments 
  border-radius 50% 

hl(color=deeppink, size=1px)
  outline size solid color
  
nw()
  top  arguments
  left arguments
  
PX = (1/16)rem
gs = 10*PX

c-sea1 = #01a0db
c-sea2 = #0ebeff
c-sea3 = #48cdfd

body, html
  rect 100%
  margin  0
  padding 0
  overflow hidden
  font-size 16px 
  

body
  background: rgb(135,224,253); /* Old browsers */
  background: radial-gradient(ellipse at center,  rgba(135,224,253,1) 0%,rgba(83,203,241,1) 40%,rgba(5,171,224,1) 100%); /* W3C */


.water-holder
  position absolute
  bottom 0
  width 100%
  height 31*gs
  hl()
  waterShift = 5*gs
  .water
    position absolute
    nw -10%
    rect 120%
    top -(waterShift)
    &--middle
      top 0
    &--front
      top waterShift
  
.water
  background-color c-sea1
  &--middle
    background-color c-sea2
  &--front
    background-color c-sea3
  circleSize = 8*gs
  &__top
    circle circleSize
    background-color inherit
    position absolute
    top -(circleSize/2)
    left 50%
    for i in 0..36
      &--{i}
        left circleSize*i
      
  